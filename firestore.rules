rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: Get user's tenant from their user document
    function getUserTenant() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId;
    }

    // Helper function: Check if user is super admin
    function isSuperAdmin() {
      return request.auth.token.role == 'superadmin';
    }

    // Helper function: Check if user is admin
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Helper function: Check if user is teacher or admin
    function isTeacher() {
      return request.auth.token.role in ['teacher', 'admin'];
    }

    // Tenants: Super admins can read all tenants, regular users can read their own tenant
    match /tenants/{tenantId} {
      allow read: if request.auth != null && isSuperAdmin();
      allow read: if request.auth != null && !isSuperAdmin() && getUserTenant() == tenantId;
      allow update: if isSuperAdmin();
      allow update: if isAdmin() && getUserTenant() == tenantId;
      allow create, delete: if false; // Only via admin SDK
    }

    // Users: Can read/update own profile, admins can create teachers
    match /users/{userId} {
      allow read: if request.auth != null && isSuperAdmin();
      allow read: if request.auth.uid == userId ||
                     (request.auth != null && !isSuperAdmin() && resource.data.tenantId == getUserTenant());
      allow update: if request.auth.uid == userId;
      allow update: if isAdmin() && resource.data.tenantId == getUserTenant();
      allow create: if isAdmin() && request.resource.data.tenantId == getUserTenant();
      allow delete: if false; // Only via admin SDK
    }

    // Students: Tenant-scoped access
    match /students/{studentId} {
      allow read: if request.auth != null && isSuperAdmin();
      allow read: if request.auth != null && !isSuperAdmin() &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isAdmin() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update, delete: if isAdmin() &&
                               resource.data.tenantId == getUserTenant();
    }

    // Teachers: Tenant-scoped access
    match /teachers/{teacherId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isAdmin() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update, delete: if isAdmin() &&
                               resource.data.tenantId == getUserTenant();
    }

    // Classes: Tenant-scoped
    match /classes/{classId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Subjects: Tenant-scoped
    match /subjects/{subjectId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Terms: Tenant-scoped
    match /terms/{termId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Scores: Teachers can create/update their own scores
    match /scores/{scoreId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isTeacher() &&
                       request.resource.data.tenantId == getUserTenant() &&
                       request.resource.data.teacherId == request.auth.uid;
      allow update: if isTeacher() &&
                       resource.data.tenantId == getUserTenant() &&
                       resource.data.teacherId == request.auth.uid;
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Results: Read-only for most users, write for admins
    match /results/{resultId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Score Configurations: Admins can manage, everyone can read
    match /scoreConfigurations/{configId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Attendance: Teachers and admins can manage
    match /attendance/{attendanceId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isTeacher() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update: if isTeacher() &&
                       resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Guardians: Tenant-scoped access
    match /guardians/{guardianId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update, delete: if isAdmin() &&
                                       request.resource.data.tenantId == getUserTenant();
    }

    // Fees: Tenant-scoped access
    match /fees/{feeId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow write: if isAdmin() &&
                      request.resource.data.tenantId == getUserTenant();
    }

    // Student Fees: Tenant-scoped access (individual student fee records)
    match /studentFees/{studentFeeId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update: if isAdmin() &&
                               request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Payments: Tenant-scoped access
    match /payments/{paymentId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update: if isAdmin() &&
                               request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Fee Structure Items: Tenant-scoped access
    match /feeStructureItems/{feeItemId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update: if isAdmin() &&
                               request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Skills: Teachers and admins can manage
    match /skills/{skillId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update: if isTeacher() &&
                               request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Skill Ratings: Teachers and admins can manage
    match /skillRatings/{ratingId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create, update: if isTeacher() &&
                               request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Audit Logs: Anyone can create (log their actions), only admins can read
    match /auditLogs/{logId} {
      allow read: if isAdmin() &&
                     resource.data.tenantId == getUserTenant();
      allow create: if request.auth != null &&
                       request.resource.data.tenantId == getUserTenant() &&
                       request.resource.data.userId == request.auth.uid;
    }

    // Report Card Templates: Admins can manage, everyone can read within tenant
    match /reportCardTemplates/{templateId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isAdmin() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update: if isAdmin() &&
                       resource.data.tenantId == getUserTenant() &&
                       request.resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Helper function: Check if user is finance or admin
    function isFinanceOrAdmin() {
      return request.auth.token.role in ['finance', 'admin'];
    }

    // Payment Gateway Settings: Admins and Finance can manage
    match /payment_gateway_settings/{settingsId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isFinanceOrAdmin() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update: if isFinanceOrAdmin() &&
                       resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Fee Configurations: Admins and Finance can manage
    match /fee_configurations/{configId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if isFinanceOrAdmin() &&
                       request.resource.data.tenantId == getUserTenant();
      allow update: if isFinanceOrAdmin() &&
                       resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Online Payment Transactions: Parents can create, admins/finance can read
    match /online_payment_transactions/{transactionId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if request.auth != null &&
                       request.resource.data.tenantId == getUserTenant() &&
                       request.resource.data.guardianId == request.auth.uid;
      allow update: if false; // Only via server-side API
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Pending Payments: Parents can create, finance/admin can update
    match /pending_payments/{paymentId} {
      allow read: if request.auth != null &&
                     resource.data.tenantId == getUserTenant();
      allow create: if request.auth != null &&
                       request.resource.data.tenantId == getUserTenant() &&
                       request.resource.data.guardianId == request.auth.uid;
      allow update: if isFinanceOrAdmin() &&
                       resource.data.tenantId == getUserTenant();
      allow delete: if isAdmin() &&
                       resource.data.tenantId == getUserTenant();
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
